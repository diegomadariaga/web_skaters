                    <input id="txtPassword" class="form-control m-auto" type="password" name="password" />
                </div>
                <div class="form-group col-12 col-sm-6">
                    <label>Repita la password</label>
                    <input id="txtPassword2" class="form-control m-auto" type="password" name="password2" />
                </div>
                <div class="form-group col-12 col-sm-6">
                    <label>AÃ±os de experiencia</label>
                    <input id="txtExp" class="form-control m-auto" type="number" name="anos_experiencia" />
                </div>
                <div class="form-group col-12 col-sm-6">
                    <label>Especialidad</label>
                    <input id="txtEsp" class="form-control m-auto" type="text" name="especialidad" />
                </div>
                <div class="form-group col-12 col-sm-12">
                    <label>Foto de perfil</label>
                    <input id="archivo" type="file" name="foto" />
                </div>
            </div>
            <input id="btnRegistrar" class="btn btn-info mb-3" type="submit" value="Registrarme" />

            
        </form>
    </div>
</body>
