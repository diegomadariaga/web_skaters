<body><br>
    <h1>Skate Park</h1>

    <div class="py-4">
        <h2>Lista de participantes</h2>

        <hr />

        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Años de experiencia</th>
                    <th scope="col">Especialidad</th>
                    <th scope="col">Estado</th>
                </tr>
            </thead>
            <tbody id="cuerpoTabla">
                {{#each filas}}
                    <tr>
                        <td>{{this.index}}</td>
                        <td><div><img
                                    src="./uploads/{{this.foto}}"
                                    alt=""
                                    style="width: 60px;height: 60px;background-size: cover;"
                                /></div></td>
                        <td>{{this.nombre}}</td>
                        <td>{{this.anos_experiencia}}</td>
                        <td>{{this.especialidad}}</td>
                        {{#if this.estado}}
                            <td class="text-success font-weight-bold">Aprobado</td>
                        {{else}}
                            <td class="text-warning font-weight-bold">En revisión</td>
                        {{/if}}

                    </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="/iniciar">Iniciar Sesión</a>
        <a href="/registrar_skater">Registrarme</a>
    </div>
</body>
